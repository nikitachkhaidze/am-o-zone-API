{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "class-methods-use-this": "off",
        "import/extensions": "off",
        "import/prefer-default-export": "off",
        "consistent-return": "off",
        "max-len": "off",
        "no-console": "off",
        "prefer-destructuring": "off",
        "no-use-before-define": "off",
        "no-useless-constructor": "off"
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".ts",
                    ".tsx",
                    ".js",
                    ".jsx"
                ],
                "moduleDirectory": [
                    "node_modules",
                    "src/*"
                ]
            }
        }
    }
}
